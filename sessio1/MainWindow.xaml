<Window x:Class="sessio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sessio1"
        mc:Ignorable="d"
        Title="Creació Nom" Height="600" Width="650">
    <StackPanel>
        <Label Content="Nom"></Label>
        <TextBox Width="100" Height="30" Text="{Binding Path=Nom, Mode=TwoWay}"></TextBox>
        <Label Content="Cognom"></Label>
        <TextBox Width="100" Height="30" Text="{Binding Path=Cognom, Mode=TwoWay}"></TextBox>
        <TextBox Width="100" Height="30" Text="{Binding Path=Nom_Complet, Mode=TwoWay}"></TextBox>
    </StackPanel>
</Window>
